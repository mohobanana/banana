<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <!-- 激活注解的的标签 -->
    <import resource="classpath:META-INF/banana/common/datasource.xml"/>
    <!--    注解-->
    <context:annotation-config/>
    <context:component-scan base-package="org.banana.demo.service,org.banana.api.function"/>

    <bean id="sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
        <property name="dataSource" ref="dataSource" />
        <property name="mapperLocations" value="classpath:META-INF/banana/services/mapper/*.xml" />
<!--        <property name="configLocation" value="classpath:mybatis/mybitas-config.xml" />-->
    </bean>

    <bean class="org.mybatis.spring.mapper.MapperScannerConfigurer">
        <property name="basePackage" value="org.moho.mapper" />
    </bean>

<!--    <bean id="jobFactory" class="org.moho.job.JobFactory"></bean>-->
<!--    <bean id="schedulerFactoryBean" class="org.springframework.scheduling.quartz.SchedulerFactoryBean">-->
<!--        <property name="jobFactory" ref="jobFactory"></property>-->
<!--    </bean>-->

</beans>